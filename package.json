{
  "name": "thermorezepte",
  "private": true,
  "scripts": {
    "dev": "pnpm --filter @app/web dev",
    "build": "pnpm --filter @app/web build",
    "lint": "pnpm --filter @app/web lint",
    "typecheck": "pnpm --filter @app/web typecheck",
    "start": "pnpm --filter @app/web start",
    "verify": "pnpm lint && pnpm typecheck && pnpm build",
    "format": "pnpm -C apps/web exec prettier . --write",
    "prepare": "husky"
  },
  "packageManager": "pnpm@9.12.3",
  "devDependencies": {
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "husky": "^8.0.0",
    "lint-staged": "^16.1.6",
    "prettier": "^3.6.2"
  },
  "lint-staged": {
    "apps/web/**/*.{ts,tsx,js,jsx}": [
      "pnpm -C apps/web exec eslint --fix",
      "pnpm -C apps/web exec prettier --write"
    ],
    "apps/web/**/*.{json,css,md}": [
      "pnpm -C apps/web exec prettier --write"
    ]
  }
}
